loadGlobalLibrary()

def image_amd64
def image_arm64

pipeline {
    agent {
        label 'centos7-docker-4c-2g'
    }

    stages {
        // this is needed to generate a changelog for changeset conditionals below
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('LF Prep') {
            when { changeset "gcc/*" }

            steps {
                edgeXSetupEnvironment()
                edgeXDockerLogin(settingsFile: env.MVN_SETTINGS)
            }
        }

        stage('Build Docker Image') {
            when { changeset "gcc/*" }

            parallel {
                stage('Build amd64') {
                    agent {
                        label 'centos7-docker-4c-2g'
                    }
                    steps {
                        script {
                            docker.withRegistry("https://${env.DOCKER_REGISTRY}:10003") {
                                image_amd64 = docker.build('edgex-gcc-base', '-f gcc/Dockerfile ./gcc')
                                
                                image_amd64.tag("latest")
                                image_amd64.tag(env.GIT_COMMIT)
                                image_amd64.tag(env.BUILD_NUMBER)
                            }
                        }
                    }
                }

                stage('Build arm64') {
                    agent {
                        label 'ubuntu18.04-docker-arm64-4c-2g'
                    }
                    steps {
                        script {
                            docker.withRegistry("https://${env.DOCKER_REGISTRY}:10004") {
                                image_arm64 = docker.build('edgex-gcc-base', '-f gcc/Dockerfile ./gcc')
                                
                                image_arm64.tag("arm64")
                                image_arm64.tag("${env.GIT_COMMIT}-arm64")
                                image_arm64.tag("${env.BUILD_NUMBER}-arm64")
                            }
                        }
                    }
                }
            }
        }

        stage('Push Docker Image') {
            when { allOf { changeset 'gcc/*'; expression { edgex.isReleaseStream() } } }

            steps {
                script {
                    docker.withRegistry("https://${env.DOCKER_REGISTRY}:10004") {
                        image_amd64.push()
                        image_arm64.push()
                    }
                }
            }
        }
    }

    post {
        always {
            edgeXInfraPublish()
        }
    }
}

def loadGlobalLibrary(branch = '*/master') {
    library(identifier: 'edgex-global-pipelines@master', 
        retriever: legacySCM([
            $class: 'GitSCM',
            userRemoteConfigs: [[url: 'https://github.com/edgexfoundry/edgex-global-pipelines.git']],
            branches: [[name: branch]],
            doGenerateSubmoduleConfigurations: false,
            extensions: [[
                $class: 'SubmoduleOption',
                recursiveSubmodules: true,
            ]]]
        )
    ) _
}