loadGlobalLibrary()

def image_amd64

pipeline {
    agent {
        label 'centos7-docker-4c-2g'
    }

    stages {
        stage('LF Prep') {
            when { changeset "lftools/*" }

            steps {
                edgeXSetupEnvironment()
                edgeXDockerLogin(settingsFile: env.MVN_SETTINGS)
            }
        }

        stage('Build Docker Image') {
            when { changeset "lftools/*" }

            steps {
                script {
                    docker.withRegistry("https://${env.DOCKER_REGISTRY}:10004") {
                        image_amd64 = docker.build('edgex-lftools', '-f lftools/Dockerfile .')
                        
                        image_amd64.tag("latest")
                        image_amd64.tag(env.GIT_COMMIT)
                        image_amd64.tag("0.23.1-centos7")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            when { allOf { changeset 'lftools/*'; expression { edgex.isReleaseStream() } } }

            steps {
                script {
                    docker.withRegistry("https://${env.DOCKER_REGISTRY}:10004") {
                        image_amd64.push()
                    }
                }
            }
        }
    }

    post {
        always {
            edgeXInfraPublish()
        }
    }
}

def loadGlobalLibrary(branch = '*/master') {
    library(identifier: 'edgex-global-pipelines@master', 
        retriever: legacySCM([
            $class: 'GitSCM',
            userRemoteConfigs: [[url: 'https://github.com/edgexfoundry/edgex-global-pipelines.git']],
            branches: [[name: branch]],
            doGenerateSubmoduleConfigurations: false,
            extensions: [[
                $class: 'SubmoduleOption',
                recursiveSubmodules: true,
            ]]]
        )
    ) _
}