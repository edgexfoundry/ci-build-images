loadGlobalLibrary()

def image

pipeline {
    agent {
        label 'centos7-docker-4c-2g'
    }

    stages {
        // this is needed to generate a changelog for changeset conditionals below
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('LF Prep') {
            when { changeset "kong/*" }

            steps {
                edgeXSetupEnvironment()
                edgeXDockerLogin(settingsFile: env.MVN_SETTINGS)
            }
        }

        stage('Build Docker Image') {
            when { changeset "kong/*" }

            steps {
                sh 'docker run --rm --privileged multiarch/qemu-user-static:register --reset'

                script {
                    docker.withRegistry("https://${env.DOCKER_REGISTRY}:10004") {
                        image = docker.build('kong-arm', '-f kong/Dockerfile ./kong')
                        
                        image.tag('latest')
                        image.tag(env.GIT_COMMIT)
                        image.tag(env.BUILD_NUMBER)
                    }
                }
            }
        }

        stage('Push Docker Image') {
            when { allOf { changeset 'kong/*'; expression { edgex.isReleaseStream() } } }

            steps {
                script {
                    docker.withRegistry("https://${env.DOCKER_REGISTRY}:10004") {
                        image.push()
                    }
                }
            }
        }
    }

    post {
        always {
            edgeXInfraPublish()
        }
    }
}

def loadGlobalLibrary(branch = '*/master') {
    library(identifier: 'edgex-global-pipelines@master', 
        retriever: legacySCM([
            $class: 'GitSCM',
            userRemoteConfigs: [[url: 'https://github.com/edgexfoundry/edgex-global-pipelines.git']],
            branches: [[name: branch]],
            doGenerateSubmoduleConfigurations: false,
            extensions: [[
                $class: 'SubmoduleOption',
                recursiveSubmodules: true,
            ]]]
        )
    ) _
}
